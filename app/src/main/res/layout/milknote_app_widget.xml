<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:padding="@dimen/widget_margin"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/appwidget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/primary_dark"
            android:layout_marginStart="@dimen/widget_text_margin"
            android:layout_marginLeft="@dimen/widget_text_margin"
            android:layout_marginTop="@dimen/widget_text_margin"

            />
        <TextView
            android:id="@+id/appwidget_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/widget_text_margin"
            android:contentDescription="@string/appwidget_text"
            android:text="@string/message_warming_up"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/appwidget_button"
        android:background="@color/accent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/cd_record_button"
        android:text="@string/record_button"
        android:layout_centerHorizontal="true" />

</LinearLayout>