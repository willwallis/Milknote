<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/icons</item>
        <item name="titleTextColor">@color/icons</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        </style>

    <!-- Customized theme for settings with dark secondary text as it has white background. -->
    <style name="PreferenceScreen" parent="AppTheme">
        <item name="android:textColorSecondary">@color/primary_text</item>
    </style>

</resources>
